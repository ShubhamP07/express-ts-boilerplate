{
    "name": "farmersapp",
    "version": "1.0.0",
    "description": "farmapp server",
    "scripts": {
        "start": "npm run compile && cross-env NODE_ENV=development node dist/app.js",
        "prod": "npm run compile && cross-env NODE_ENV=production node dist/app.js",
        "dev": "cross-env NODE_ENV=development nodemon",
        "build": "tsc",
        "clean": "rimraf dist",
        "compile": "npm run clean && npm run build && mkdir dist/public",
        "test": "jest --forceExit --detectOpenHandles",
        "lint": "eslint --ignore-path .gitignore --ext .ts src/",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install"
    },
    "lint-staged": {
        "src/**/*.{ts,js,json}": [
            "prettier --config .prettierrc --write \"src/**/*.{ts,js,json}\""
        ]
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.21.1",
        "bcrypt": "^5.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "csvtojson": "^2.0.10",
        "dotenv": "^8.2.0",
        "envalid": "^6.0.2",
        "express": "^4.17.1",
        "express-mongo-sanitize": "^2.2.0",
        "helmet": "^4.4.1",
        "hpp": "^0.2.3",
        "http-errors": "^2.0.0",
        "husky": "^7.0.4",
        "jest": "^26.6.3",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.12.14",
        "morgan": "^1.10.0",
        "mysql2": "^2.2.5",
        "nodemailer": "^6.7.3",
        "package.json": "^2.0.1",
        "reflect-metadata": "^0.1.13",
        "winston": "^3.3.3",
        "winston-daily-rotate-file": "^4.5.0"
    },
    "devDependencies": {
        "@types/express-serve-static-core": "^4.17.28",
        "@types/nodemailer": "^6.4.4",
        "@tsconfig/node16": "^1.0.2",
        "@types/bcrypt": "^3.0.1",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.11",
        "@types/hpp": "^0.2.1",
        "@types/http-errors": "^1.8.2",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/morgan": "^1.9.2",
        "@types/node": "^14.14.22",
        "@typescript-eslint/eslint-plugin": "^4.14.0",
        "@typescript-eslint/parser": "^4.14.0",
        "eslint": "^7.18.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^7.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.3"
    }
}